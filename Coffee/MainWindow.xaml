<Window x:Class="Coffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coffee"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">

    <Grid>
        <StatusBar Margin="0,0,0,0" Height="30" VerticalAlignment="Top">
            <Menu>
                <MenuItem Header="Файл">
                    <MenuItem x:Name="saveButton" Header="Сохранить" Click="saveButton_Click"/>
                </MenuItem>
            </Menu>
            <Button VerticalAlignment="Center" Click="Button_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                Hello
            </Button>
        </StatusBar>
        
        
        <DataGrid x:Name="coffeeDataGrid" Margin="0,30,0,0" AutoGenerateColumns="True">
        </DataGrid>
    </Grid>
    
</Window>
